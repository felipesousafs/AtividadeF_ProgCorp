<% unless controller_name == "registrations" or controller_name == "sessions" %>
    <%- value = "helpers.titles.#{action_name}" -%>
    <% if action_name == "index" %>
        <i class="fa fa-fw fa-list"></i>
    <% elsif action_name == "show" %>
        <i class="fa fa-fw fa-eye"></i>
    <% elsif action_name == "new" %>
        <i class="fa fa-fw fa-edit"></i>
    <% elsif action_name == "edit" %>
        <i class="fa fa-fw fa-pencil"></i>
    <% else %>
        <i class="fa fa-fw fa-question-circle"></i>
    <% end -%>
    <%- value = "helpers.titles.#{action_name}" -%>

    <%= t value %>
    <% if action_name == "index" and action_name != "fees" %>
        <%= t 'of' %> <%= Kernel.const_get(controller_name.singularize.camelize).model_name.human.downcase.pluralize %>
    <% else %>
        <%= Kernel.const_get(controller_name.singularize.camelize).model_name.human.downcase %>
    <% end -%>
    <% unless controller_name == 'users' || controller_name == 'condominium_fees' || action_name == "fees" %>
        <% #if can? :new, controller_name.singularize %>
        <% unless action_name == 'new' %>
            <% unless controller_name == 'condominium_fees' %>
                <% if can? :edit, Apartment %>
                    <%= link_to eval("new_#{controller_name.singularize}_path"), class: "btn btn-primary btn-xs" do %>
                        <%= t('.new', default: t("helpers.links.new")) %> <%= Kernel.const_get(controller_name.singularize.camelize).model_name.human %>
                        <i class='fa fa-plus'></i>
                    <% end %>
                <% end %>
            <% end %>
        <% end %>
        <% #end %>
    <% end %>
<% end -%>
