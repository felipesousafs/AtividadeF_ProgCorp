
<%= simple_form_for(@expense) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :apartment, label_method: :number %>
    <%= f.input :description %>
    <%= f.input :is_fixed_value %>
    <%= f.input :value %>
    <%= f.input :month_of_ref, html5: true, as: :date, input_html: { type: :month, class: 'monthpicker' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
