<%= content_for :full_box do %>opa<% end %>
<div class="box box-primary box-solid">
  <div class="box-header with-border">
    <h3 class="box-title">
      <i class="fa fa-money"></i> <span>Taxas de condomínio</span>
    </h3>

    <div class="box-tools pull-right">
      <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
      </button>
    </div>
    <!-- /.box-tools -->
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <table id="example" class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>Apartment</th>
        <th>Value</th>
        <th>Due date</th>
        <th>Month Ref</th>
        <th>Paid</th>
      </tr>
      </thead>

      <tbody>
      <% @condominium_fees.each do |condominium_fee| %>
          <tr>
            <td><%= condominium_fee.apartment_id %></td>
            <td><%= condominium_fee.value %></td>
            <td><%= l(condominium_fee.due_date, format: :date) %></td>
            <td><%= l(condominium_fee.month_ref, format: :month_and_year) %></td>
            <td><%= condominium_fee.paid ? 'Sim' : 'Não' %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>
  </div>
</div>
<div class="box box-primary box-solid">
  <div class="box-header with-border">
    <h3 class="box-title">
      <i class="fa fa-dollar"></i> <span>Despesas gerais</span>
    </h3>

    <div class="box-tools pull-right">
      <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
      </button>
    </div>
    <!-- /.box-tools -->
  </div>
  <!-- /.box-header -->
  <div class="box-body">
    <table id="example" class="table table-striped table-bordered">
      <thead>
      <tr>
        <th>Descrição</th>
        <th>Valor</th>
        <th>Fixo?</th>
        <th>Mês de referência</th>
      </tr>
      </thead>

      <tbody>
      <% @expenses.each do |expense| %>
          <tr>
            <td><%= expense.description %></td>
            <td><%= expense.value %></td>
            <td><%= expense.is_fixed_value ? 'Sim' : 'Não' %></td>
            <td><%= l(expense.month_of_ref, format: :month_and_year) %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>
  </div>
</div>