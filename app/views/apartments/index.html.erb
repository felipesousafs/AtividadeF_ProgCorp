<table id="example" class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Number</th>
    <th>Number of rooms</th>
    <th>Resident</th>
    <th>Owner</th>
    <th colspan="3">Opções</th>
  </tr>
  </thead>

  <tbody>
  <% @apartments.each do |apartment| %>
      <tr>
        <td class="text-justify"><%= apartment.number %></td>
        <td class="text-justify"><%= apartment.number_of_rooms %></td>
        <td class="text-justify"><%= apartment.resident ? apartment.resident.name : 'Não informado' %></td>
        <td class="text-justify"><%= apartment.owner.name %></td>
        <td class="text-center">
          <%= render "shared/action_links", object: apartment %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>