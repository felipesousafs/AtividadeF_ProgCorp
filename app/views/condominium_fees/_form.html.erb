
<%= simple_form_for(@condominium_fee) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :apartment, label_method: :number %>
    <%= f.input :value %>
    <%= f.input :due_date, html5: true, as: :date %>
    <%= f.input :paid %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
