<%= simple_form_for @condominium_fee, url: generate_fees_url do |f| %>
    <%= f.error_notification %>
    <div class="row">
      <div class="col-md-3">
        <div class="form-inputs">
          <%= f.input :due_date, html5: true, as: :date, input_html: {value: Date.today} %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <div class="form-actions">
          <%= f.submit 'Confirmar', class: 'btn btn-default' %>
        </div>
      </div>
    </div>
<% end %>
