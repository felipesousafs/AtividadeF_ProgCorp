<table id="example" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Apartment</th>
      <th>Value</th>
      <th>Due date</th>
      <th>Month Ref</th>
      <th>Paid</th>
      <th colspan="3">Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @condominium_fees.each do |condominium_fee| %>
      <tr>
        <td><%= condominium_fee.apartment_id %></td>
        <td><%= condominium_fee.value2f %></td>
        <td><%= l(condominium_fee.due_date, format: :date) %></td>
        <td><%= l(condominium_fee.month_ref, format: :month_and_year) %></td>
        <td><%= condominium_fee.paid ? 'Sim' : 'Não' %></td>
        <td><%= link_to 'Show', condominium_fee %></td>
        <td><%= link_to 'Edit', edit_condominium_fee_path(condominium_fee) %></td>
        <td><%= link_to 'Destroy', condominium_fee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>